    const testBtn = document.querySelector(".test");

    testBtn.addEventListener("click", {
        const url = "http://192.168.5.156:8080/api/teamlist";
        fetch(url, {
            method: "get",
        }).then(response => {
         alert(response);
            const msg = (response.ok) ? "댓글 수정 완료" : "댓글 수정 실패..!";
